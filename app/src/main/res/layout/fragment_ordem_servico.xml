<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E0E0E0"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textOs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ordem de Serviço"
                android:textAlignment="center" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/textOsCodigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Código:"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="lll"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/textOsTipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Tipo:"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="lll"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/textOsDescricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Decrição:"
                    android:inputType="none"
                    android:maxLines="2"
                    android:singleLine="true"
                    android:text="lll"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/textData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Data:"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="lll"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cliente"
                android:textAlignment="center" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/textCliCodigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Código:"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="lll"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/textCliNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Nome:"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="lll"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/texCliCpf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="CPF:"
                    android:inputType="none"
                    android:maxLines="2"
                    android:singleLine="true"
                    android:text="lll"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/textCliTelefone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Telefone:"
                    android:inputType="none"
                    android:maxLines="2"
                    android:singleLine="true"
                    android:text="lll"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texCarro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carro"
                android:textAlignment="center" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/textCarCodigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Código:"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="lll"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/textCarMarca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Marca:"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="lll"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textCarModelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/textModelo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Modelo:"
                    android:inputType="none"
                    android:maxLines="2"
                    android:singleLine="true"
                    android:text="lll"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/textPlaca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Placa:"
                    android:inputType="none"
                    android:maxLines="2"
                    android:singleLine="true"
                    android:text="lll"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.92"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textServico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Serviços"
                android:textAlignment="center" />

                <ListView
                    android:id="@+id/listServicosOS"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Valor"
                android:textAlignment="viewEnd"
                android:textColorLink="?attr/actionMenuTextColor" />

            <TextView
                android:id="@+id/textValorEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="R$00,00"
                android:textAlignment="viewEnd" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>